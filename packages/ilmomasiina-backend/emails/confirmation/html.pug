extends ../layout.pug

block mainContent
	div.content-block
		p.bodyText #{event.verificationEmail}
	div.content-block
		p.bodyText Info om händelsen:
		ul
			li
				strong Händelse: 
				| #{event.title}
			li
				strong Plats: 
				| #{event.location}
			if date
				li
					strong Tid: 
					| #{date}
	div.content-block
		p.bodyText Dina anmälningsuppgifter:
		ul
			each val in answers
				li #[strong #{val.label}:] #{val.answer}
	div.content-block
		p.bodyText Om du vill avanmäla dig eller ändra din anmälan kan du göra det genom att klicka på #[a( href=cancelLink ) denna länk].
